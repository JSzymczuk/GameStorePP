@model GameStore.Models.Requirements

<ul class="requirements-list">
    @if (!string.IsNullOrWhiteSpace(Model.OS))
    {
        <li>
            @Html.DisplayNameFor(model => model.OS): @Html.DisplayFor(model => model.OS)
        </li>
    }
    @if (!string.IsNullOrWhiteSpace(Model.CPU))
    {
        <li>
            @Html.DisplayNameFor(model => model.CPU): @Html.DisplayFor(model => model.CPU)
        </li>
    }
    @if (!string.IsNullOrWhiteSpace(Model.GPU))
    {
        <li>
            @Html.DisplayNameFor(model => model.GPU): @Html.DisplayFor(model => model.GPU)
        </li>
    }
    @if (!string.IsNullOrWhiteSpace(Model.RAM))
    {
        <li>
            @Html.DisplayNameFor(model => model.RAM): @Html.DisplayFor(model => model.RAM)
        </li>
    }
    @if (!string.IsNullOrWhiteSpace(Model.HDD))
    {
        <li>
            @Html.DisplayNameFor(model => model.HDD): @Html.DisplayFor(model => model.HDD)
        </li>
    }
    @if (!string.IsNullOrWhiteSpace(Model.DirectX))
    {
        <li>
            @Html.DisplayFor(model => model.DirectX)
        </li>
    }
</ul>