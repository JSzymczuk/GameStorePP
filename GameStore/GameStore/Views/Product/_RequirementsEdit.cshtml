@model GameStore.Models.Requirements

@{ 
    string prefix = ViewData["Prefix"] + ".";
}
  
@Html.HiddenFor(model => model.Id)

<div class="form-group">
    @Html.LabelFor(model => model.OS, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.Editor(prefix + "OS", Model.OS, new
        {
            htmlAttributes = new
            {
                @class = "form-control",
                @Value = Model.OS
            }
        })
        @Html.ValidationMessageFor(model => model.OS, "", new { @class = "text-danger" })
    </div>
</div>

